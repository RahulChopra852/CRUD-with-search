  <style>
    .center {
      margin: auto;
      width: 50%;
      padding: 10px;
    }

    .back{
    background-image: url("/assets/newrecp.jpg");
    background-color: #cccccc;
    background-repeat:no-repeat;
    background-size: cover;
    width:1000px;
    padding-bottom:150px;
    }

  </style>

<%= form_with(model: food) do |form| %>
  <% if food.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
        <% food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="center back">

  <div class="field">
    <%= form.file_field :image, class:"form-control", placeholder:"insert an image" %>
  </div> <br>

  <div class="field">
    <%= form.text_field :title, class:"form-control", placeholder:"Name of your creation"  %>
  </div><br>

  <div class="field">
    <%= form.number_field :calories, class:"form-control", placeholder:"Calories" %>
  </div><br>

  <div class="field">
    <%= form.text_field :time_to_prep, class:"form-control", placeholder:"Time To Prep" %>
  </div><br>

  <div class="field">
    <%= form.text_field :time_to_cook, class:"form-control", placeholder:"Time To Cook" %>
  </div><br>

  <div class="field">
    <%= form.text_field :string, class:"form-control", placeholder:"Ingredients & Quantity" %>
  </div><br>

  <div class="field">
    <%= form.text_field :Veg_Non_Veg_Vegan, class:"form-control", placeholder:"Category: Veg | Non Veg | Vegan" %>
  </div><br>

  <div class="field">
    <%= form.text_field :Type_of_food_, class:"form-control", placeholder:"EG. Breakfast, Appetizers, Desserts, Drinks, Protein shakes, Lunch, Salads, Sandwiches, Pasta, Side Dish " %>
  </div><br>

  <div class="field">
    <h2>Steps to follow:</h2>
  </div><br>

  <div class="field">
    <%= form.text_field :step_1, class:"form-control", placeholder:"step-1" %>
  </div><br>

  <div class="field">

    <%= form.text_field :step_2, class:"form-control", placeholder:"step-2" %>
  </div><br>

  <div class="field">

    <%= form.text_field :step_3, class:"form-control", placeholder:"step-3" %>
  </div><br>

  <div class="field">

    <%= form.text_field :step_4, class:"form-control", placeholder:"step-4" %>
  </div><br>

  <div class="field">

    <%= form.text_field :step_5, class:"form-control", placeholder:"step-5" %>
  </div><br>

  <div class="field">

    <%= form.text_field :additional_steps, class:"form-control", placeholder:"Additional Steps" %>
  </div><br>

</div>

<div class="container"style="text-align:center">
<br>
  <div class="actions">
    <%= form.submit %>
  </div>

</div>

<% end %>
