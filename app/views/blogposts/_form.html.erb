
<%= simple_form_for(@blogpost) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :post_id %>
    <%= f.input :name %>
    <%= f.input :time %>
    <%= f.input :body %>
    <%= f.input :extra1 %>
    <%= f.input :extra2 %>
    <%= f.input :extra3 %>
    <%= f.input :extra4 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
