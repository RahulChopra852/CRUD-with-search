<p id="notice"><%= notice %></p>

<h1>Blogposts</h1>

  <table class="table table-borderless">  <thead>
    <tr>
      <th>Post</th>
      <th>Name</th>
      <th>Time</th>
      <th>Body</th>
      <th>Extra1</th>
      <th>Extra2</th>
      <th>Extra3</th>
      <th>Extra4</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogposts.each do |blogpost| %>
      <tr>
        <td><%= blogpost.post_id %></td>
        <td><%= blogpost.name %></td>
        <td><%= blogpost.time %></td>
        <td><%= blogpost.body %></td>
        <td><%= blogpost.extra1 %></td>
        <td><%= blogpost.extra2 %></td>
        <td><%= blogpost.extra3 %></td>
        <td><%= blogpost.extra4 %></td>
        <td><%= link_to 'Show', blogpost %></td>
        <td><%= link_to 'Edit', edit_blogpost_path(blogpost) %></td>
        <td><%= link_to 'Destroy', blogpost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blogpost', new_blogpost_path %>
